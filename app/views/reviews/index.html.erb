
<% if params[:restaurant_id] %>
    <%= render '/reviews/restaurantreviews' %>
<% else %>

<div class="container">
<h1 class="underlined"> All Reviews</h1>
<br>

<ol>
<% @reviews.each do |review| %>

<li><h4>Review for <%= link_to "#{review.restaurant.restaurant_name}", restaurant_path(review.restaurant) %> </h4></li>
    
    <p><strong>Rating: </strong><%= review.rating %></p>
    <p><strong>Description: </strong><%= review.content %></p> 
    <p><strong>Reviewed by: </strong><%= review.user.name %></p> 

    <% if authorized(review, current_user) %>
        <%= link_to "Edit", edit_review_path(review) %>  or  
        <%= link_to "Delete", review_path(review), method: :delete, data: {confirm: "Are you sure?" } %> <br>
    <% end %>
<br>
<% end %>   
</ul>

<br><br>
<% if !logged_in? %>
    <br>
    <p>Make Sure you Log in or Sign up if you want to add a new review</p>
    <%= link_to "Sign Up", signup_path  %>
    <br>
    <%= link_to "Log In", login_path %>
<% end %>
<br>
</div>
<% end %>