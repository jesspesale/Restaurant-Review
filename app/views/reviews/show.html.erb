
<h2 class="underlined">Review for <%= link_to "#{@review.restaurant.restaurant_name}", restaurant_path(@restaurant) %></h2>
<br>
<h2>Rating (1-5): <%= @review.rating %>
<h2>Description: <%= @review.content %></h2>

<br>
<p><strong>Reviewed By:</strong> <%= @review.user.name %></p>
<br>
    <% if authorized(@review, current_user) %>
        <%= link_to "Edit Review", edit_review_path(@review) %>
        <br>
        <%= link_to "Delete Review", review_path(@review), method: 'delete', data: {confirm: "Are you sure you want to delete this review?"} %>
        <br>
    <% end %>
<br>
<br>
<br>
 <%= link_to "All #{@review.restaurant.restaurant_name} Reviews", restaurant_reviews_path(@restaurant) %>