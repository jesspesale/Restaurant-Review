<h2>Create a new review for:   <%= @restaurant.restaurant_name %></h2>

<%= form_for @review do |f| %>
    <br>
    <%= f.label "Rating (1-5)" %>
    <%= f.number_field :rating, min:0, max: 5 %>
    <br>
    <br>
    <%= f.label :content %>
    <%= f.text_area :content, size: "30x5" %>
    <br>
    <br>
    <%= f.hidden_field :restaurant_id %>
    <br>
    <br>
    <%= f.submit "Submit Review" %>
<% end %>