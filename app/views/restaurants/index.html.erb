<div class="container">
<% if @restaurants == [] %>
    <h2>Sorry there are no restaurants yet.</h2>
<% else %>

<h1 class="underlined">All the Restaurants</h1>
<br>
<ol>
    <% @restaurants.each do |restaurant| %>
    <li>
    <%= link_to restaurant.restaurant_name, restaurant_path(restaurant) %>
    <br>
    <ul>
    <li>Cuisine: <%= restaurant.cuisine.name %></li>
    <li>City: <%= restaurant.city %></li>
    </ul>
    <br>
    <%= link_to "Review #{restaurant.restaurant_name}", new_restaurant_review_path(restaurant) %>
    <br>

    <% if authorized(restaurant, current_user )%>
        <%= link_to "Edit", edit_restaurant_path(restaurant) %>  or  
        <%= link_to "Delete", restaurant_path(restaurant), method: :delete, data: {confirm: "Are you sure you want to delete #{restaurant.restaurant_name}?" } %>
    <br>
        <% end %>
    </li>
    <br>
    <br>
<% end %>
</ol>
<br>
<% end %>
    <%= link_to "Add a new Restaurant", new_restaurant_path %>

</div>