<%= form_for @restaurant do |f| %>
    <%= f.label :restaurant_name %>
    <%= f.text_field :restaurant_name %>
    <br>
    <br>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <br>
    <br>
    <%= f.label :city %>
    <%= f.text_field :city%>
    <br>
    <br>
    <%= f.label :state %>
    <%= f.text_field :state %>
    <br>
    <br>
    <%= f.collection_select :cuisine_id, Cuisine.all, :id, :name, prompt: true, :selected => @restaurant.cuisine_id %>
    <br>
    <br>
    <%= f.submit %>
    <br>
<% end %>