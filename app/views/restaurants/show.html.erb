<div class="container">
<h1 class="underlined"><%= @restaurant.restaurant_name %></h1>

<h3>City: <%= @restaurant.city %></h3>

<% if @restaurant.address != "" %>
    <h3>Address: <%= @restaurant.address %></h3>
<% end %>

<% if @restaurant.state != "" %>
    <h3>State: <%= @restaurant.state %></h3>
<% end %>

<h3>Cuisine: <%= @restaurant.cuisine.name %></h3>
<br>
<br>

    <% if authorized(@restaurant, current_user) %>
        <%= link_to "Edit #{@restaurant.restaurant_name}", edit_restaurant_path(@restaurant) %>
        <br>
        <%= link_to "Delete #{@restaurant.restaurant_name}", restaurant_path(@restaurant), method: :delete, data: {confirm: "Are you sure you want to delete #{@restaurant.restaurant_name}?" } %>
    <% end %>
<br>
<br>
    <%= link_to "Review #{@restaurant.restaurant_name}", new_restaurant_review_path(@restaurant) %>


<br>
<br>
<br>
    <% if @restaurant.reviews == [] %>
        <h4>There are no reviews for <%= @restaurant.restaurant_name %> yet.</h4>
    <% else %>
    <%= link_to "All #{@restaurant.restaurant_name} Reviews", restaurant_reviews_path(@restaurant) %>
    <%= render '/reviews/topreviews' %>
<!-- will render all the reviews for this restaurant from review partial first(3)-->
    <% end %>
<br>

</div>	