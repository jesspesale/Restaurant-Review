<div class="container text-center">
<h1>Sign up as a new user here</h1>
<br>
<%= render partial: 'layouts/error_messages', locals: {instance: @user} %>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.label :email %>
    <%= f.email_field :email %> <!-- #gives automatic validations -->
    <br>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <br>
    <%= f.submit "Sign Up" %>
<% end %>
<br>
<br>

<%= link_to "Log In", login_path %>

</div>
</div>
