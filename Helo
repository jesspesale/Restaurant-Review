<% if @reviews.count >= 1 %>
    <h1>Reviews</h1>
<% else %>
    <h2>Sorry there are no reviews for <%= @restaurant.restaurant_name %> yet. </h2>
<% end %>

<ol>
<% @reviews.each do |review| %>

<li>
    <p><strong>Rating: </strong><%= review.rating %></p>
    <p><strong>Description: </strong><%= review.content %></p>
    <p><strong>Posted by: </strong><%= review.user.name %></p> 

    
</li>
   <% if logged_in? %>
    <% if review.user_id == current_user.id %>
        <%= link_to "Edit", edit_review_path(review) %>  or  
        <%= link_to "Delete", review_path(review), method: :delete, data: {confirm: "Are you sure?" } %>
    <br>
        <% end %>
<% end %>  
    <br>
    <% end %>
</ul>

<br>
<br>
<% if !logged_in? %>
    <br>
    <p>Make Sure you Log in or Sign up if you want to add a new review</p>
    <%= link_to "Sign Up", signup_path  %>
    <br>
    <%= link_to "Log In", login_path %>
<% end %>

<br>


